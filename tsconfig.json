{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"moduleResolution": "node",
		"target": "es6",
		"jsx": "react",
		"esModuleInterop": false,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"es2017",
			"dom",
			"webworker",
			"es2018.promise"
		],
		"plugins": []
	},
	"include": [
		"./src/**/*",
		"*.config.js"
	]
}
